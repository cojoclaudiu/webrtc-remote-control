{
  "name": "@webrtc-remote-control/core",
  "amdName": "webrtcRemoteControl",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "source": "./src/core.index.js",
  "exports": {
    ".": "./dist/index.modern.js",
    "./master": "./master/dist/master.modern.js",
    "./remote": "./remote/dist/remote.modern.js"
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:core": "microbundle build --raw",
    "build:core-umd-dev": "microbundle build --raw --define process.env.NODE_ENV='development' --no-pkg-main -o dist/webrtc-remote-control.umd.dev.js -f umd",
    "build:core-umd-prod": "microbundle build --raw --define process.env.NODE_ENV='production' --no-pkg-main -o dist/webrtc-remote-control.umd.prod.js -f umd",
    "build:master": "microbundle build --raw --cwd master",
    "build:remote": "microbundle build --raw --cwd remote",
    "dev": "npm-run-all --parallel dev:*",
    "dev:core": "microbundle watch --raw",
    "dev:master": "microbundle watch --raw --cwd master",
    "dev:remote": "microbundle watch --raw --cwd remote",
    "test": "jest",
    "test:precommit": "jest --bail --findRelatedTests",
    "test:watch": "jest --watch -o"
  },
  "author": "Christophe Rosset <tophe@topheman.com> (http://labs.topheman.com/)",
  "license": "ISC",
  "files": [
    "src",
    "dist",
    "master",
    "master/dist",
    "remote",
    "remote/dist"
  ],
  "devDependencies": {
    "jest": "^27.5.1",
    "microbundle": "^0.14.2",
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "peerjs": "^1.3.2"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7"
  }
}
